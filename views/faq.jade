extends layout

block scripts
	script(src='/scripts/faq.js')

block content
	.header
		nav.navbar.navbar-static-top(role="navigation")
			.col-sm-3.col-md-3.pull-left.sec
				form.navbar-form.form-inline.navbar-left(role="search")
					.form-group
						.input-group
							.input-group-addon
								label(for="search")
									i.glyphicon.glyphicon-search
							input#search(type="text",placeholder="Search").form-control							
			.col-sm-6.col-md-6.sec
				h1=title
			.col-sm-3.col-md-3.pull-right.sec
				ul.nav.navbar-nav.pull-right
					li
						a(href="#",title="How can I contribute?") Help
					li
						a(href="#",title="What are my stats?") Stats


	.container#faq
		div.jumbotron
			div#questions.panel-group
				each question in questions
					.question
						.panel.panel-default
							.panel-heading
								h4.panel-title
									a(data-toggle="collapse",data-parent="#questions",href='#' + question._id)=question.question
						div(id=question._id).panel-collapse.collapse.answer
							.panel-body
								p=question.answer