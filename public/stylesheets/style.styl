$background = #FFFFFF
$font-color = #222222
$main-color = #57068C
$alternate-color = #FFFFFF
$secondary-color = #87C400
$tertiary-color = #D1AB00

body
	font: 14px Helvetica, serif
	background: $background
	padding: 0
	margin: 0

h1
	background: $main-color
	margin: 0
	text-align: center
	text-transform: uppercase
	font-weight: bold
	font-size: 250%
	line-height: 3em
	color: $alternate-color
		
h2
	background: $secondary-color
	color: $alternate-color
	font-size: 100%
	padding-left: 20px
	line-height: 2em
	text-align: left
	position: relative
	margin-top: 0
	
	strong
		font-size: 200%
		line-height: 2em
	
	em
		position: absolute
		right: 10px
		top: 0
		line-height: 4em
		text-align: right

p.upper
	position: absolute
	top: 0px
	right: 30px
	font-size: 125%
	color: $alternate-color
	line-height: 4em

.btn.toggleRank
	display: block
	position: absolute
	top: 20px
	left: 30px

.stats
	ul, li
		list-style: none
	width: 50%
	float: left

.stats.people
	li
		margin-bottom: 3px
		height: 50px
		padding-left: 55px
		line-height: 50px
		position: relative
		font-size: 180%
		
		img
			display: block
			position: absolute
			left: 0

#requesters
	h2
		background: $tertiary-color

#lookup
	.rankStat
		display: none
		
		.controls
			span
				display: block
				padding-top: 5px

.modal-body
	overflow-y: visible